@using KoruTechnicalAssignment.Web.Client.Models

@if (IsVisible && Request is not null)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1" style="z-index:1081;">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Request.Title</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>Şube:</strong> @Request.BranchName<br />
                        <strong>Talep Eden:</strong> @Request.RequesterName<br />
                        <strong>Tarih:</strong> @Request.RequestDate.ToString("dd.MM.yyyy") @Request.StartTime.ToString("HH\\:mm") - @Request.EndTime.ToString("HH\\:mm")
                    </div>
                    <div class="mb-3">
                        <strong>Açıklama:</strong>
                        <div>@(string.IsNullOrWhiteSpace(Request.Description) ? "-" : Request.Description)</div>
                    </div>
                    <h6>Durum Geçmişi</h6>
                    <ul class="list-group">
                        @foreach (var history in Request.History.OrderByDescending(h => h.ChangedAt))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <span class="@RequestStatusDisplay.GetBadgeClass(history.Status)">@RequestStatusDisplay.GetStatusText(history.Status)</span>
                                    <div class="small text-muted">@history.ChangedBy</div>
                                    @if (!string.IsNullOrWhiteSpace(history.Reason))
                                    {
                                        <div class="small">Neden: @history.Reason</div>
                                    }
                                </div>
                                <span class="text-muted small">@history.ChangedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</span>
                            </li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public RequestDetailModel? Request { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private Task Close() => OnClose.InvokeAsync();
}
